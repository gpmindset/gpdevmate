{
  "name": "@gpdevmate/cli",
  "version": "1.0.0",
  "description": "gpdevmate is a CLI-based AI agent that performs intelligent code reviews",
  "bin": {
    "gpdevmate": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "dotenvx run --quiet -- tsx src/index.ts",
    "start": "dotenvx run --quiet -- node dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gpmindset/gpdevmate.git"
  },
  "private": true,
  "dependencies": {
    "commander": "^14.0.0",
    "@gpdevmate/core": "workspace:*",
    "@dotenvx/dotenvx": "^1.45.2",
    "@inquirer/prompts": "^7.6.0"
  }
}
